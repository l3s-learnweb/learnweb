<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.3"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">

	<application>
		<locale-config>
			<default-locale>en_UK</default-locale>
			<supported-locale>de_DE</supported-locale>
			<supported-locale>de_DE_AMA</supported-locale>
			<supported-locale>de_DE_Archive</supported-locale>
			<supported-locale>en_UK</supported-locale>
			<supported-locale>en_UK_Archive</supported-locale>
			<supported-locale>it_IT</supported-locale>
			<supported-locale>pt_BR</supported-locale>
		</locale-config>
		
		<resource-bundle>		
			<base-name>de.l3s.learnweb.LanguageBundle</base-name>
			<var>msg</var>
		</resource-bundle>
			
	    <el-resolver>
			org.primefaces.application.exceptionhandler.PrimeExceptionHandlerELResolver
	    </el-resolver>
	</application>
