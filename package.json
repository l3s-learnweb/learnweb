{
  "name": "learnweb-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "browserslist": [
    "Firefox ESR",
    "> 0.5% in DE",
    "not op_mini all"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "build:dev": "node esbuild.js dev",
    "watch": "node esbuild.js watch",
    "lint:scss": "stylelint src/main/webapp/resources/learnweb/sass",
    "lint:js": "eslint src/main/webapp/resources/learnweb/js/**",
    "test:visual": "node src/test/visual/test.js",
    "test:percy": "percy exec -- node src/test/visual/test.js"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.7",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@popperjs/core": "^2.11.8",
    "@simonwep/pickr": "^1.8.2",
    "bootstrap": "^5.3.0",
    "highcharts": "^8.2.2",
    "jquery-contextmenu": "^2.9.2",
    "justifiedGallery": "^3.8.1",
    "shepherd.js": "^11.1.1",
    "video.js": "^8.6.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.2",
    "esbuild-sass-plugin": "^2.16.0",
    "eslint": "^8.45.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-compat": "^4.1.4",
    "stylelint": "^15.10.2",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0"
  },
  "peerDependencies": {
    "@percy/cli": "^1.26.0",
    "@percy/puppeteer": "^2.0.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:compat/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "jquery": true
    },
    "globals": {
      "PF": "readonly",
      "PrimeFaces": "readonly"
    },
    "rules": {
      "linebreak-style": "off",
      "func-names": "off",
      "no-plusplus": "off",
      "consistent-return": "off",
      "no-console": "off",
      "no-param-reassign": "off",
      "no-unused-vars": "off",
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false,
          "variables": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 150
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "max-nesting-depth": 5,
      "selector-max-compound-selectors": 6,
      "selector-no-qualifying-type": null,
      "scss/dollar-variable-pattern": null,
      "scss/no-global-function-names": null,
      "scss/at-extend-no-missing-placeholder": null,
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "css-when-else",
            "css-nesting",
            "css-color-function",
            "css-overflow",
            "css-overflow-overlay",
            "css-scrollbar",
            "css-selection",
            "css-text-indent",
            "css-backdrop-filter"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "**/california/theme/**",
      "**/california/variables/**"
    ],
    "overrides": [
      {
        "files": [
          "*.xhtml",
          "**/*.xhtml"
        ],
        "syntax": "html",
        "rules": {
          "declaration-block-semicolon-newline-after": "never-multi-line"
        }
      }
    ]
  }
}
