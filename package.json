{
  "name": "learnweb",
  "private": true,
  "version": "1.0.0",
  "browserslist": [
    "> 0.5% in DE",
    "not safari < 10.3",
    "not ios_saf < 10.3",
    "not ie >= 0",
    "not dead"
  ],
  "scripts": {
    "scss:watch": "sass WebContent/resources/layout/sass:WebContent/resources/layout/css --style=compressed --watch",
    "scss:build": "sass WebContent/resources/layout/sass:WebContent/resources/layout/css --style=compressed",
    "scss:lint": "stylelint WebContent/resources/layout/sass",
    "js:lint": "eslint WebContent/resources/layout/js/**",
    "build": "npm run scss:build",
    "lint": "npm run scss:lint && npm run js:lint"
  },
  "devDependencies": {
    "browserslist": "^4.14.7",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-import": "^2.22.1",
    "sass": "^1.29.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:compat/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "script"
    },
    "env": {
      "browser": true,
      "node": false,
      "jquery": true
    },
    "globals": {
      "PF": "readonly",
      "PrimeFaces": "readonly"
    },
    "rules": {
      "linebreak-style": "off",
      "no-underscore-dangle": "off",
      "func-names": "off",
      "no-plusplus": "off",
      "consistent-return": "off",
      "no-console": "off",
      "no-param-reassign": "off",
      "no-unused-vars": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false,
          "variables": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 150
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "selector-max-id": null,
      "selector-class-pattern": null,
      "scss/at-extend-no-missing-placeholder": null,
      "max-nesting-depth": 6,
      "selector-max-compound-selectors": 6,
      "selector-no-qualifying-type": null,
      "scss/dollar-variable-pattern": null,
      "order/order": null,
      "order/properties-alphabetical-order": null,
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "css-gradients",
            "multicolumn"
          ]
        }
      ],
      "property-disallowed-list": [
        "user-select"
      ],
      "declaration-property-value-disallowed-list": {
        "position": [
          "sticky"
        ]
      },
      "selector-pseudo-element-disallowed-list": [
        "selection"
      ]
    },
    "ignoreFiles": [
      "**/node_modules/**",
      "**/vendor/**"
    ]
  }
}
