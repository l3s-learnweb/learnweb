{
  "name": "learnweb",
  "private": true,
  "version": "1.0.0",
  "browserslist": [
    "> 0.5% in DE",
    "not safari < 10.3",
    "not ios_saf < 10.3",
    "not ie >= 0",
    "not dead"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "watch": "rollup -c -w",
    "scss:lint": "stylelint WebContent/resources/learnweb/sass",
    "js:lint": "eslint WebContent/resources/learnweb/js/**",
    "lint": "npm run scss:lint && npm run js:lint"
  },
  "dependencies": {
    "@fancyapps/fancybox": "^3.5.7",
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@simonwep/pickr": "^1.8.0",
    "bootstrap": "^5.0.0-beta2",
    "highcharts": "^8.2.2",
    "jquery-contextmenu": "^2.9.2",
    "justifiedGallery": "^3.8.1",
    "shepherd.js": "^8.1.0",
    "video.js": "^7.11.4"
  },
  "devDependencies": {
    "@astappiev/rollup-plugin-scss": "^3.0.6",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.3.4",
    "autoprefixer": "^9.8.6",
    "browserslist": "^4.16.3",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.22.1",
    "postcss": "^7.0.35",
    "rollup": "^2.39.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.7",
    "stylelint": "^13.10.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:compat/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true,
      "jquery": true
    },
    "globals": {
      "PF": "readonly",
      "PrimeFaces": "readonly"
    },
    "rules": {
      "linebreak-style": "off",
      "no-underscore-dangle": "off",
      "func-names": "off",
      "no-plusplus": "off",
      "consistent-return": "off",
      "no-console": "off",
      "no-param-reassign": "off",
      "no-unused-vars": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false,
          "classes": false,
          "variables": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 150
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "selector-max-id": null,
      "selector-class-pattern": null,
      "scss/at-extend-no-missing-placeholder": null,
      "max-nesting-depth": 6,
      "selector-max-compound-selectors": 6,
      "selector-no-qualifying-type": null,
      "scss/dollar-variable-pattern": null,
      "order/order": null,
      "order/properties-alphabetical-order": null,
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "css-sticky",
            "css-gradients",
            "multicolumn"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "**/node_modules/**",
      "**/bundle/**"
    ]
  }
}
