{
  "name": "learnweb-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "browserslist": [
    "Firefox ESR",
    "> 0.5% in DE",
    "not op_mini all"
  ],
  "scripts": {
    "build": "node esbuild.js",
    "build:dev": "node esbuild.js dev",
    "watch": "node esbuild.js watch",
    "lint:scss": "stylelint src/main/webapp/resources/learnweb/sass --fix",
    "lint:js": "eslint src/main/webapp/resources/learnweb/js/**",
    "test:visual": "node src/test/visual/test.js",
    "test:percy": "percy exec -- node src/test/visual/test.js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "shepherd.js": "^14.5.0",
    "video.js": "^8.23.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "esbuild": "^0.25.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.33.0",
    "eslint-plugin-compat": "^6.0.2",
    "globals": "^16.0.0",
    "sass-embedded": "^1.90.0",
    "stylelint": "^16.23.1",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4"
  },
  "peerDependencies": {
    "@percy/cli": "^1.30.2",
    "@percy/puppeteer": "^2.0.2"
  },
  "engines": {
    "node": ">=22.11.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "plugins": [
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "max-nesting-depth": 5,
      "selector-max-compound-selectors": 6,
      "selector-no-qualifying-type": null,
      "scss/dollar-variable-pattern": null,
      "scss/no-global-function-names": null,
      "scss/at-extend-no-missing-placeholder": null,
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": [
            "css-when-else",
            "css-nesting",
            "css-color-function",
            "css-overflow",
            "css-overflow-overlay",
            "css-scrollbar",
            "css-selection",
            "css-text-indent",
            "css-backdrop-filter"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "**/california/theme/**",
      "**/california/variables/**"
    ],
    "overrides": [
      {
        "files": [
          "*.xhtml",
          "**/*.xhtml"
        ],
        "syntax": "html",
        "rules": {
          "declaration-block-semicolon-newline-after": "never-multi-line"
        }
      }
    ]
  }
}
